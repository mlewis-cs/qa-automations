{
  "servers": {
    "dbhub": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@bytebase/dbhub@latest", "--transport", "stdio"],
      "env": {
        "DBHUB_CONFIG_PATH": "${workspaceFolder}/dbhub.toml"
      }
    },
    "csv-writer": {
      "type": "stdio",
      "command": "node",
      "args": ["${workspaceFolder}/mcp-csv-writer/index.js"],
      "env": {
        "MCP_WORKSPACE": "${workspaceFolder}"
      }
    },
    "atlassian": {
      "url": "https://mcp.atlassian.com/v1/mcp",
      "type": "http"
    }
  }
}
